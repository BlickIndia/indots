.about_text{
	color $darkgrey
	font-weight 500
	font-size 18px
	margin-bottom 30px
}
#about {
	margin-bottom 60px
}
.blog_text{
	margin-bottom 70px
}
section{
	padding 100px 0
}

.btn-xl {
	padding 14px 25px
	color $white
	font-weight 900
	background-color $color1
	font-size 18px
}
.btn.btn-default.btn-xl-more {
	font-size 18px
	padding 0px 24px
	font-family: 'Avenir LT Std 85 Heavy'
}

.bg-primary{
	background-image url(/img/bg-thumb/rectangle-4@3x.png)
	background-size cover
	padding-bottom 0px
	height auto
}

.text-center.logo-center {
	margin-bottom 50px
}

.custom_container {
	relative()
	top -165px
}
.text_s2 {
	margin-top 30px
	font-size 16px
}
.sr-icons {
	height 60px
}
.blog_content h2.blog_title {
		color $darkgrey
		margin-bottom: 40px;
		font-family 'Avenir LT Std 85 Heavy'
	}
.blog_content p{
 		color $darkgrey
}

.img.img-responsive.thumb-img {
	width 410px
}

.thumbnails{
	padding-top 0px
}
.thumbnail {
	width 410px
	padding 0 !important
	background-color $color2 !important
	border 0px none !important
	height 460px
	.caption{
		p{
			color $darkgrey
		}
	}
	.cap_para {
	    font-size 16px
	}
	.cap_para2 {
	    font-size 14px
	}
}
.thumb_cap{
	width 100%
}
.subscribe{
	margin-top 50px
}
.user_img{
	width 22%
	float left
	position relative
	top -45px
	left 14px
}
.thumb_quote{
	width 60%
	float left
	margin-left 32px
	margin-top 5px
	font-family 'Avenir LT Std 45 Book'
}
.thumb_s1{
	padding-left 95px !important
	padding-right 95px !important
	color $darkgrey
}
.thumb_text {
	font-size 22px
}

.head_thumb{
	padding-top 10px
	font-size 20px
}
.content_flash {
	padding 0px 0px !important
}
.content_head{
	color $color1
	margin-top 44px !important
	font-family 'Avenir LT Std 85 Heavy'
}
.content_title{
	color $darkgrey
	font-size 22px
	font-weight 700
}
.col-lg-3.col-md-3.sub_section {
	text-align center
}
.border_head{
	border-top .5px solid $color3
}
.sub_section_detail{
	margin-top 80px
}
.icon {
	width 38px
	height 45px
}
.icon2{
	height 55px
}

.text_margin{
	margin-top 25px
}
.text_margin2{
	margin-top 15px
}
.thumbnail.tn_home{
	width 345px
	margin-bottom 50px !important
	height 424px
	.caption{
		padding 13px 83px !important
	}
}
.thumb_text{
	margin 60px 0px
}
.btn1.btn-xl-more{
	padding 12px 55px
	color #fff
	font-weight 700
	background-color $btncolor
	font-size 18px
	border 0px none
	border-radius 4px
	font-family: 'Avenir LT Std 85 Heavy'
	a{
		color #fff
	}
}
.btn1.btn-xl-more:hover{
	background-color $color1
}
.more_btn {
	text-align center
}
.form-control{
	height 50px !important
	border 0.5px solid $color3 !important
	border-radius 0px !important
	width 325px !important
}
.form-inline {
	text-align: center;
}
.btn-default{
	color $white !important
	background-color $btngreen !important
	height 50px !important
}
.form-group {
	padding 0px 8px
}
.sub_caption{
	font-family 'Avenir LT Std 45 Book Oblique'
}
.sub_caption.cap_1{
	position absolute
	bottom 40px
	left 137px
	color $grey1 !important
	font-size 12px
	right 132px
}
.sub_caption.cap_2{
	position absolute
	bottom 20px
	left 137px
	color $grey1 !important
	font-size 12px
	right 132px
}


@media only screen and (max-width: 768px) {
	.thumb_s1{
		padding 0px 0px !important
	}
	.thumbnail.tn_home{
		width auto
		height auto
	}
	.thumbnail {
		width auto
		height 440px
	}
	.sub_caption.cap_1, .sub_caption.cap_2 {
		position absolute
		left 40px
		right 39px
	}
	.sub_caption.cap_1{
		bottom 8px
	}
	.sub_caption.cap_2 {
		bottom 0px
	}
	.form-control {
		width 100% !important
	}
	.white_text {
		margin-left 0px
	}
	.footer_form {
		text-align left
	}
	.form-control1 {
		width 100%
	}
}

@media only screen and (min-width: 769px) and (max-width: 990px){
	.hm_thumbnail {
		padding 0px 77px
	}
	.thumb_s1 {
		padding-left 45px !important
		padding-right 45px !important
	}
	.thumbnail {
		height 480px
	}
	.sub_caption.cap_1, .sub_caption.cap_2 {
		position absolute
		left 80px
		right 80px
	}
	.sub_caption.cap_2 {
		bottom 30px
	}
	.left_widget, .right_widget {
		width 50%
		float left
	}
	.white_text {
		margin-left 0px
	}
	.form-control1 {
		width 245px !important
	}
	.hm_thumbnail {
		padding 0 23px
	}
}

@media only screen and (min-width: 991px) and (max-width: 1024px){
	.hm_thumbnail {
		padding 0px 77px
	}
	.thumb_s1 {
		padding-left 45px !important
		padding-right 45px !important
	}
	.thumbnail {
		height: 480px;
	}
	.sub_caption.cap_1, .sub_caption.cap_2 {
		position absolute
		left 80px
		right 80px
	}
	.sub_caption.cap_2 {
		bottom 30px
	}
}